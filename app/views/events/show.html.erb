<p><%= @event.name %></p>
<p><%= link_to 'New Card', new_event_card_path(@event)  %></p>


 <%= link_to 'Edit', edit_board_event_path(@event.board_id, @event) %>
 <%= link_to 'Destroy', board_event_path(@event.board_id, @event), 'data-confirm' => 'Are you sure?' ,method: :delete %>

 <p>Comment here</p>
  <%= form_for @comment do |f| %>
  <%= f.hidden_field :event_id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.text_area :content %>
  <%= f.submit 'Comment here' %>
<% end %>

<h3>Comments</h3>
<% @event.comments.each do |comment| %>
  <p>
  	<%= comment.content %>
  	<% if comment.persisted? %>
	  	<%= link_to 'Destroy', comment_path(comment), method: :delete %>
	   <% end %>
  </p>
<% end %>

