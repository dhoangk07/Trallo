<ul id='cards'>
  <% @event.cards.each do |card| %>
    <li id="card-<%= card.id %>"><%= link_to card.name, event_card_path(@event, card)  %>
      <%= link_to 'Destroy', event_card_path(@event, card), method: :delete, remote: true %>
    </li>
  <% end %>
</ul>

<p>Create new card</p>
<% new_card = @event.cards.new %>
<%= form_for [@event, new_card], remote: true do |f| %>
  <%= f.hidden_field :event_id, value: @event.id %>
  <%= f.text_field :name %>
  <%= f.submit %>
<% end %>