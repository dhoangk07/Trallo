<h1> Edit user</h1>

<%= form_for @user, :html => { :multipart => true }  do |f| %>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <%= f.file_field :photo %>

   <%= f.check_box :notification %> Receive E-mail. <br />

  <%= f.submit %>

<% end %>