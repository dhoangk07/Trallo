<div class="wrapper">
	<div class="board-icon">
		<a href="#" id="board-icon"><%= fa_icon "trello" %> Boards </a>
		<div id="board-icon-content" style="display: none">
				<% @boards.each do |board| %>
		  		<h3><%= link_to board.name, board_path(board) %></h3>
		  		<% end %>
		</div>
	</div>

	<div class="search-item">
		<%if @board.present? %>
	   		<%= form_tag search_board_path(@board), remote: true do%>
				<div class="block-left">
					<%= text_field_tag :search, params[:search] %>
					<span class="block-right"><%= fa_icon "search" %></span>
				</div>
			<% end %>
		<% end %>
			<a href="#" id="cards-result" class="cards-result"></a>
			<div id="cards-result-content" class="cards-result-content" style="display: none">
	</div>

	<div class="statistics-icon">

	<a href="#" id="statistics-icon"><%= fa_icon "bar-chart" %></a>
		<div id="statistics-icon-content" style="display: none">
			<h3><Strong>Statistics quantity Card of Board</Strong></h3>
				<h4>Quantity Boards : <%= @boards.all.count%>
				<h4>Number of lists: <%= @board.lists.count %></h4>
				<% cards = Card.where(list_id: @board.lists.select(:id))%>
				<h4>Number of cards: <%= cards.count %></h4>
				<% cards_users = CardsUser.where(card_id: cards)%>
				<h4>Number of members: <%= User.where(id: cards_users.select(:user_id)).count %></h4>
				<h4>Number of comments : <%= Comment.where(card_id: cards).count %></h4>
				<h4>Average number of comments for a card : <%= Comment.where(card_id: cards, user_id: current_user.id).count.to_f %>/<%= cards.count.to_f %></h4>
				<h4>Quantity comments of current user : <%= Comment.where(card_id: cards, user_id: current_user.id).count%>
	</div>

</div>


<h1><%= @board.name %></h1>

<ul id='list'>
	<% @board.lists.order('list_position ASC').each do |list| %>
		
	  <%= render('list_modal', board: @board, list: list) %>

	<% end %>

<div>

	<% new_list = @board.lists.new %>
	<%= form_for [@board, new_list], remote: true do |f| %>
	  <%= f.hidden_field :board_id, value: @board.id %>
	  <%= f.hidden_field :user_id, value: current_user.id %>
	  <%= f.text_field :name, placeholder: "Add a list..." %>
	<% end %>
</div>

</ul>
