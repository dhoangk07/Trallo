<div id="comment-<%= comment.id %>" class='comment-in-card'>
  <b>Name :<%= comment.user.name %></b>
  <div class='comment-content'>Comment :<%= comment.content %></div>
  <small>Answered :<%= time_ago_in_words(comment.created_at) %></small>
  <%= link_to 'Destroy', card_comment_path(comment.card, comment), method: :delete, remote: true %>
</div>
	   